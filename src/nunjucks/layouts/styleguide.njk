{% macro docsheading(heading) %}
	<div class="mmx-docs-heading-container">
		<div class="container mmx-docs-container">
			<h2 class="mmx-docs-heading" id="{{ heading | replace(" ", "") }}">
			{{heading}}
			</h2>
		</div>
	</div>
{% endmacro %}

{% block headerstyles %}
	<link rel="stylesheet" href="{{settings.stylesPath}}styleguide.css"/>
{% endblock %}

{% block rootcontent %}
<div data-appname="{{settings.repoName}}" class="mmx-componentlibrary">
  <header class="mmx-docs-header">
    <div class="container mmx-docs-container">
      <h1 class="page-heading">{{settings.title}} Styleguide</h1>
      <div id="rss-feeds"></div>
    </div>
  </header>
	<nav id="mmx-document-nav" class="hidden-xs hidden-sm hidden-md">
	  <button id="mmx-docs-toggle-button" title="Pin menu">
