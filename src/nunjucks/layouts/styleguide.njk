	    <div class="text-center">
				<a href="http://www.metamatrix.se">
					<img src="images/styleguide/mmx-logo.svg" alt=""/>
				</a>
			</div>
	  </div>
	</footer>
</div>
{% endblock %}

{% block footerscripts %}
	<script src="{{settings.scriptsPath}}styleguide.min.js"></script>
{% endblock %}
