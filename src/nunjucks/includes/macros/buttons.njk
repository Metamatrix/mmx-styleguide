{#//- button mixins
//- anchor buttons
mixin a-btn(url,style)
	- var type = (typeof style === 'undefined') ? "default" : style
	a.btn(class="btn-" + type,href=url)
		block

mixin a-btn-primary(url)
	+a-btn(url,"primary")
		block

mixin a-btn-info(url)
	+a-btn(url,"info")
		block

mixin a-btn-warning(url)
	+a-btn(url,"warning")
		block

mixin a-btn-danger(url)
	+a-btn(url,"danger")
		block

mixin a-btn-success(url)
	+a-btn(url,"success")
		block#}

//- buttons

{% macro btn(caption, style, size) %}
	var type = (typeof style === 'undefined') ? "default" : style
{% if !size %}
	<button class="btn-" + type, type="button"></button>
{% else %}
	<button class="btn-" + type "btn-" + size, type="button"></button>
{% endif %}
{% endmacro %}


