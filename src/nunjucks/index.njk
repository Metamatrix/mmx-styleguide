{% extends "../layouts/styleguide.njk" %}

{% block content %}
	<section class="mmx-docs-chapter">
		{{	docs-heading("Profile") }}

		{{	doc-section("Fonts") }}
		{% include "components/fonts" %}

		{{	doc-section("colors") }}
		{#{% include "components/colors" %}#}

		{{	doc-section("Logotypes") }}
		{% include "components/logotype" %}

		{{	doc-section("Margins") }}
		{#{% include "components/margins" %}#}

		{{	doc-section("icons") }}
		{% include "components/icons" %}

		{{	doc-section("Images") }}
		{% include "components/images" %}
	</section>


	<section class="mmx-docs-chapter">
		{{	docs-heading("Components") }}

		{{	doc-section("Headings") }}
		{% include "components/headings" %}

		{{	doc-section("Body text") }}
		{% include "components/body-text" %}

		{{	doc-section("Lead text") }}
		{% include "components/lead-text" %}

		{{	doc-section("Small text") }}
		{% include "components/small-text" %}

		{{	doc-section("Link text") }}
		{% include "components/links" %}

		{{	doc-section("Text alignment") }}
		{% include "components/text-alignment" %}

		{{	doc-section("Text helpers") }}
		{% include "components/text-helpers" %}

		{{	doc-section("Blockquote") }}
		{% include "components/blockquote" %}

		{{	doc-section("Lists") }}
		{% include "components/lists" %}

		{{	doc-section("Tables") }}
		{#{% include "components/tables" %}#}

		{{	doc-section("Forms") }}
		{#{% include "components/forms" %}#}

		{{	doc-section("Buttons") }}
		{% include "components/buttons" %}

		{{	doc-section("Video") }}
		{% include "components/video" %}

		{{	doc-section("Breadcrumbs") }}
		{% include "components/breadcrumb" %}

		{{	doc-section("Pagination") }}
		{% include "components/pagination" %}

		{{	doc-section("Alert") }}
		{% include "components/alerts" %}

		{{	doc-section("Lables") }}
		{% include "components/labels" %}

		{{	doc-section("Cards") }}
		{% include "components/cards" %}

		{{	doc-section("Dropdowns") }}
		{% include "components/dropdowns" %}

		{{	doc-section("Tabs") }}
		{% include "components/nav-tabs" %}

		{{	doc-section("Navbar") }}
		{% include "components/navbar" %}

		{{	doc-section("Navtree") }}
		{% include "components/navtree" %}

		{{	doc-section("Media object") }}
		{% include "components/media-object" %}

		{{	doc-section("Vcard") }}
		{% include "components/vcard" %}
	</section>

	<section class="mmx-docs-chapter">
		{{	docs-heading("Compositions") }}

		{{	doc-section-no-container("Site header") }}
		{% include "compositions/global-header" %}

		{{	doc-section-no-container("Site footer") }}
		{% include "compositions/global-footer" %}

		{{	doc-section-no-container("Site search") }}
		{% include "compositions/global-search" %}
	</section>

	<section class="mmx-docs-chapter">
		{{	docs-heading("Templates") }}

		{{	doc-section("Pages") }}
		<ul class="list-unstyled mmx-docs-link-list">
		<ul>
			{% for name, fileName in {{data.templates}} %}
				<li>
					<a href=FileName + ".html">{{name}}</a>
				</li>
			{% endfor %}
		</ul>

	</section>

{% endblock %}