.vcard
	.vcard-inner
		.vcard-img
			+img-ph('portrait')(class="img-circle img-responsive")
		.vcard-body
			h2.vcard-heading 
				span.vcard-name Firstname Lastname
			
			span.vcard-title Job title
			
			dl
				dt Phone
				dd
					a.vcard-email(href="mailto:firstname.lastname@metamatrix.se") firstname.lastname@metamatrix.se
				dt E-mail
				dd
					a.vcard-phone(href="tel:+46812345678") 08 1234 5678